{
  "$schema": "http://json.schemastore.org/template",
  "author": "YourName",
  "identity": "Normal.Init.Template",
  "name": "Normal initial settings",
  "shortName": "normal-init",
  "classifications": ["Starter", "CI", "EditorConfig"],
  "sourceName": "tempInit",
  "preferNameDirectory": true,

  "symbols": {
    "SolutionName": {
      "type": "parameter",
      "datatype": "text",
      "replaces": "__SolutionName__",
      "defaultValue": "MySolution",
      "description": "Solution name used in ci.yml, etc."
    },
    "SdkMajor": {
      "type": "parameter",
      "datatype": "text",
      "replaces": "__SdkMajor__",
      "defaultValue": "9",
      "description": "Major version for actions/setup-dotnet (e.g., 8 or 9)"
    }
  },

  "primaryOutputs": [
    { "path": "src/tempInit/tempInit.csproj" },
    { "path": "tests/tempInit.Tests/tempInit.Tests.csproj" }
  ],

  "postActions": [
    {
      "id": "create-sln",
      "description": "Create solution file",
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "args": {
        "executable": "dotnet",
        "args": "new sln",
        "redirectStandardOutput": false,
        "redirectStandardError": false
      },
      "manualInstructions": [{ "text": "dotnet new sln -n <SolutionName>" }],
      "continueOnError": false
    },
    {
      "id": "add-projects",
      "description": "Add projects to solution",
      "actionId": "D396686C-DE0E-4DE6-906D-291CD29FC5DE",
      "args": {
        "inRoot": true
      },
      "manualInstructions": [{ "text": "dotnet sln <SolutionName>.sln add src/<name>/<name>.csproj tests/<name>.Tests/<name>.Tests.csproj" }],
      "continueOnError": false
    }
  ]
}
