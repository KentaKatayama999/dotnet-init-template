<Window x:Class="SimpleCAD.Demo.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleCAD.Demo.WPF"
        xmlns:cad="clr-namespace:SimpleCAD.Controls.WPF;assembly=SimpleCAD.Controls.WPF"
        mc:Ignorable="d"
        Title="SimpleCAD WPF Demo" Height="600" Width="900">
    <DockPanel>
        <!-- ツールバー -->
        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar>
                <Button x:Name="btnSelectionTool" Content="選択" Click="BtnSelectionTool_Click" Padding="8,4"/>
                <Separator/>
                <Button x:Name="btnLineTool" Content="直線" Click="BtnLineTool_Click" Padding="8,4"/>
                <Button x:Name="btnArcTool" Content="円弧" Click="BtnArcTool_Click" Padding="8,4"/>
                <Button x:Name="btnCurveTool" Content="曲線" Click="BtnCurveTool_Click" Padding="8,4"/>
                <Separator/>
                <Button x:Name="btnMoveTool" Content="移動" Click="BtnMoveTool_Click" Padding="8,4"/>
                <Button x:Name="btnRotateTool" Content="回転" Click="BtnRotateTool_Click" Padding="8,4"/>
                <Button x:Name="btnScaleTool" Content="拡大縮小" Click="BtnScaleTool_Click" Padding="8,4"/>
                <Separator/>
                <Button x:Name="btnLinearDimension" Content="線形寸法" Click="BtnLinearDimension_Click" Padding="8,4"/>
                <Button x:Name="btnRadialDimension" Content="半径寸法" Click="BtnRadialDimension_Click" Padding="8,4"/>
                <Button x:Name="btnAngularDimension" Content="角度寸法" Click="BtnAngularDimension_Click" Padding="8,4"/>
                <Separator/>
                <Button x:Name="btnCancelTool" Content="キャンセル (ESC)" Click="BtnCancelTool_Click" Padding="8,4"/>
                <Button x:Name="btnCompleteCurve" Content="曲線完成 (Enter)" Click="BtnCompleteCurve_Click" Padding="8,4"/>
                <Separator/>
                <Button x:Name="btnClear" Content="クリア" Click="BtnClear_Click" Padding="8,4"/>
                <Button x:Name="btnZoomFit" Content="全体表示" Click="BtnZoomFit_Click" Padding="8,4"/>
                <Separator/>
                <CheckBox x:Name="chkGrid" Content="グリッド表示" IsChecked="True"
                          Checked="ChkGrid_Changed" Unchecked="ChkGrid_Changed"
                          VerticalAlignment="Center" Margin="4,0"/>
                <CheckBox x:Name="chkSnap" Content="グリッドスナップ" IsChecked="True"
                          Checked="ChkSnap_Changed" Unchecked="ChkSnap_Changed"
                          VerticalAlignment="Center" Margin="4,0"/>
            </ToolBar>
        </ToolBarTray>

        <!-- ステータスバー -->
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock x:Name="txtStatus" Text="準備完了"/>
            </StatusBarItem>
        </StatusBar>

        <!-- CADキャンバス -->
        <Border BorderBrush="Gray" BorderThickness="1">
            <cad:CADCanvas x:Name="cadCanvas"/>
        </Border>
    </DockPanel>
</Window>
